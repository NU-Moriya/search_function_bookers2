<!DOCTYPE html>
<html>
  <head>
    <title>search-function_bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class="container">
      <div class="row">
        <p id="notice"><%= notice %></p>
        <p id="flash"><%= alert %></p>
        <div class="col-xs-8 offset-xs-2">
          <% if user_signed_in? %>
            <div class="search-form">
              <%= form_with(url: search_path, local: true) do |form| %>
                <%= form.text_field 'search[content]' %>
                <%= form.select 'search[model]', options_for_select({ "User" => "user", "Book" => "book" }) %>
                <%= form.select 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
                <%= form.submit '検索' %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div>
        <%= yield %>
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
